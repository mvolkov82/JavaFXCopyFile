<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo1.controller.FxController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="label"/>
    <Button text="Start copy" onAction="#onStartCopyClick"/>
    <ProgressBar fx:id="progressBar" layoutX="193.0" layoutY="149.0" prefWidth="200.0" progress="0.0" />
    <Button text="Cancel copy" onAction="#onCancelCopyClick"/>
</VBox>
